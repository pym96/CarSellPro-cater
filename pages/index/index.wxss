/* pages/customer-list/customer-list.wxss */
.customer-list {
    padding: 10rpx;
  }
  
  .customer-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
    padding: 10rpx;
  }
  
  .car-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 10rpx;
  }
  
  .car-number {
	font-size: 30rpx;
	color:black;
  }
  
  .phone-number {
    font-size: 24rpx;
    color: #888;
  }


.container{
	background-color: rgb(250, 250, 250);
}


.map{
	margin: 0 20rpx;
	margin-top: -50rpx;
	width: 710rpx;
	height: 400rpx;
	background-color: #fff;
	border: 1rpx solid #ccc;
	border-radius: 20rpx;
	box-shadow: #ccc  0 0 5rpx 2rpx;
	color: rgb(106, 106, 106);
}
  
.left{
	font-family: Arial, Helvetica, sans-serif;
	font-size:16px;
	font-weight: bold;
}
  